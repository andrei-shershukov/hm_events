---
import Banner from './banner.astro'

interface Props {
  id: string
  title: string
  tagline: string
  description: string
  date: string
  image: string
  location: {
    name: string
    map_url: string
  }
  number_of_spots: number
  ticket_price: number
}

const { id, title, tagline, description, date, image, location, number_of_spots, ticket_price } = Astro.props
---

<section id={id} class="event-section">
  <Banner title={title} tagline={tagline} image={image} />

  <div class="event-content">
    <div class="event-description">
      <p>{description}</p>
    </div>
    <div class="event-details">
      <div class="detail-item">
        <span class="detail-label">Date & Time:</span>
        <span class="detail-value">{new Date(date).toLocaleDateString('en-US', {
          weekday: 'long',
          year: 'numeric',
          month: 'long',
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit',
        })}</span>
      </div>

      <div class="detail-item">
        <span class="detail-label">Location:</span>
        <span class="detail-value">
          <a href={location.map_url} target="_blank" rel="noopener noreferrer" class="location-link">
            {location.name}
          </a>
        </span>
      </div>

      <div class="detail-item">
        <span class="detail-label">Available Spots:</span>
        <span class="detail-value">{number_of_spots}</span>
      </div>

      <div class="detail-item price">
        <span class="detail-label">Ticket Price:</span>
        {ticket_price === 0
          ? (
            <span class="detail-value free">FREE</span>
          )
          : (
            <span class="detail-value">${ticket_price}</span>
          )}
      </div>
    </div>
  </div>
</section>

<style>
  .event-section {
    margin-bottom: 80px;
    padding: 0 20px;
    scroll-margin-top: 120px;
  }

  .event-content {
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 16px;
    padding: 32px;
    box-shadow: 0 8px 24px rgba(148, 118, 118, 0.15);
    border: 1px solid rgba(231, 183, 182, 0.75);
  }

  .event-description {
    margin-bottom: 32px;
  }

  .event-description p {
    color: var(--color-brown-bg);
    text-align: center;
  }

  .event-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .detail-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .detail-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-brown-bg);
    opacity: 0.8;
  }

  .detail-value {
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-brown-bg);
  }

  .location-link {
    color: var(--color-pink-accent);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .location-link:hover {
    color: var(--color-brown-bg);
    text-decoration: underline;
  }

  .price .free {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-pink-accent);
  }

  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    .event-section {
      margin-bottom: 60px;
      padding: 0 16px;
    }

    .event-content {
      padding: 24px;
      border-radius: 12px;
    }

    .event-details {
      grid-template-columns: 1fr;
      gap: 16px;
    }
  }

  @media (max-width: 480px) {
    .event-content {
      padding: 20px;
    }

    .event-description {
      margin-bottom: 24px;
    }
  }
</style>
