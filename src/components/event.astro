---
import events from '@/static/events.yaml'
import Banner from './banner.astro'

interface Props {
  id: string
  title: string
  tagline: string
  description: string
}

const { id, title, tagline, description } = Astro.props
const event = events[id as keyof typeof events]
const imagePath = event?.image ? `/events/${event.image}` : undefined
---

<section id={id} class="event-section">
  <Banner title={title} tagline={tagline} image={imagePath} />

  <div class="event-content">
    <div class="event-description">
      <p>{description}</p>
    </div>

    {event && (
      <div class="event-details">
        <div class="detail-item">
          <span class="detail-label">Date & Time:</span>
          <span class="detail-value">{new Date(event.date).toLocaleDateString('en-US', {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit',
          })}</span>
        </div>

        <div class="detail-item">
          <span class="detail-label">Location:</span>
          <span class="detail-value">
            <a href={event.location.map_url} target="_blank" rel="noopener noreferrer" class="location-link">
              {event.location.name}
            </a>
          </span>
        </div>

        <div class="detail-item">
          <span class="detail-label">Available Spots:</span>
          <span class="detail-value">{event.number_of_spots}</span>
        </div>

        <div class="detail-item">
          <span class="detail-label">Ticket Price:</span>
          <span class="detail-value price">${event.ticket_price}</span>
        </div>
      </div>
    )}
  </div>
</section>

<style>
  .event-section {
    margin-bottom: 80px;
    padding: 0 20px;
    scroll-margin-top: 120px;
  }

  .event-content {
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 16px;
    padding: 32px;
    box-shadow: 0 8px 24px rgba(148, 118, 118, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(231, 183, 182, 0.2);
  }

  .event-description {
    margin-bottom: 32px;
  }

  .event-description p {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--color-brown-bg);
    margin: 0;
    text-align: center;
    font-weight: 400;
  }

  .event-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .detail-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .detail-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-brown-bg);
    opacity: 0.8;
  }

  .detail-value {
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-brown-bg);
  }

  .location-link {
    color: var(--color-pink-accent);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .location-link:hover {
    color: var(--color-brown-bg);
    text-decoration: underline;
  }

  .price {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-pink-accent);
  }

  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    .event-section {
      margin-bottom: 60px;
      padding: 0 16px;
    }

    .event-content {
      padding: 24px;
      border-radius: 12px;
    }

    .event-details {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .event-description p {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .event-content {
      padding: 20px;
    }

    .event-description {
      margin-bottom: 24px;
    }
  }
</style>
