---
import events from '@/static/events.yaml'

// Format date for display
function formatEventDate(dateString: string) {
  const date = new Date(dateString)
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
  })
}
---

<nav class="navbar">
  <div class="logo">HeartMatch</div>
  <div class="nav-events">
    {Object.entries(events).map(([id, event]) => (
      <a href={`#${id}`} class="nav-event" data-event-id={id}>
        <span class="event-date">{formatEventDate(event.date)}</span>
        <span class="event-title">{event.title}</span>
      </a>
    ))}
  </div>
  <button class="menu-button" aria-label="Menu">â˜°</button>
</nav>

<script>
  // Intersection Observer for navbar highlighting
  document.addEventListener('DOMContentLoaded', () => {
    const events = document.querySelectorAll('[id]')
    const nav_links = document.querySelectorAll('.nav-event')

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        const nav_link = document.querySelector(`[data-event-id="${entry.target.id}"]`)
        if (entry.isIntersecting && nav_link) {
          // Remove active class from all nav links
          nav_links.forEach(link => link.classList.remove('active'))
          // Add active class to current nav link
          nav_link.classList.add('active')
        }
      })
    }, {
      threshold: 0.5,
      root_margin: '-100px 0px -100px 0px'
    })

    events.forEach((event) => {
      if (event.id) {
        observer.observe(event)
      }
    })
  })
</script>

<style>
  .navbar {
    position: fixed;
    top: 16px;
    left: 24px;
    right: 24px;
    margin: auto;
    background-color: var(--color-white);
    border-radius: 16px;
    max-width: 768px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 24px;
    z-index: 1000;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(231, 183, 182, 0.2);
  }

  .logo {
    font-size: 1.25rem;
    font-weight: bold;
    color: var(--color-brown-bg);
    flex-shrink: 0;
  }

  .nav-events {
    display: none;
    gap: 8px;
    margin: 0 16px;
    flex: 1;
    justify-content: center;
  }

  .nav-event {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    padding: 8px 12px;
    border-radius: 8px;
    transition: all 0.3s ease;
    color: var(--color-brown-bg);
    background-color: transparent;
    border: 1px solid transparent;
    font-size: 0.85rem;
    min-width: 80px;
  }

  .nav-event:hover {
    background-color: var(--color-yellow-highlight);
    border-color: var(--color-pink-accent);
    transform: translateY(-1px);
  }

  .nav-event.active {
    background-color: var(--color-pink-accent);
    color: var(--color-white);
    border-color: var(--color-pink-accent);
    box-shadow: 0 2px 8px rgba(239, 129, 126, 0.3);
  }

  .event-date {
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 2px;
    opacity: 0.8;
  }

  .event-title {
    font-size: 0.8rem;
    font-weight: 500;
    text-align: center;
    line-height: 1.2;
  }

  .menu-button {
    font-size: 1rem;
    cursor: pointer;
    background: none;
    border: none;
    padding: 8px;
    color: var(--color-brown-bg);
    border-radius: 6px;
    transition: background-color 0.3s ease;
    flex-shrink: 0;
  }

  .menu-button:hover {
    background-color: var(--color-yellow-highlight);
  }

  /* Desktop navigation */
  @media (min-width: 768px) {
    .nav-events {
      display: flex;
    }

    .menu-button {
      display: none;
    }
  }

  /* Mobile responsive adjustments */
  @media (max-width: 767px) {
    .navbar {
      left: 16px;
      right: 16px;
      padding: 12px 20px;
    }

    .logo {
      font-size: 1.1rem;
    }
  }
</style>
