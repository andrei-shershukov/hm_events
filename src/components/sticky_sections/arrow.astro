---
interface Props {
  direction: 'down' | 'up'
}

const { direction = 'down' } = Astro.props;
---

<div class="arrow">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class={direction === 'up' ? 'arrow-down' : 'arrow-up'}
  >
    <path d="M12 5v14m0 0l-4-4m4 4l4-4" />
  </svg>
</div>

<style>
  .arrow {
    height: 10%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .arrow-down {
    transform: rotate(180deg);
  }
  .arrow-up {
    transform: rotate(0deg);
  }
  .arrow svg {
    width: 2rem;
    height: 2rem;
    color: var(--color-primary);
  }
  .arrow svg:hover {
    color: var(--color-primary-dark);
  }
  .arrow svg:active {
    color: var(--color-primary-light);
  }
</style>
