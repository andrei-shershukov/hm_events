---
const { title, tagline } = Astro.props;
---

<style>
  .banner {
    position: relative;
    height: 600px;
    width: 100%;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .banner img {
    background-size: cover;
    background-position: center;
    height: 100%;
    width: 100%;
    object-fit: cover;
    position: absolute;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  .content {
    position: relative;
    z-index: 2;
  }

  h1 {
    margin: 0;
    font-size: 2rem;
  }

  p {
    margin: 0.5rem 0 0;
    font-size: 1rem;
  }
</style>

<div class="banner">
  <!-- <div class="overlay"></div> -->
  <img src="https://fastly.picsum.photos/id/472/536/354.jpg?hmac=g-ApUurszx4jJjnP4B1qlsdYfm1LL4M_Jc70X4kT5IE" />
  <div class="content">
    <h1>{title}</h1>
    <p>{tagline}</p>
    <button class="btn btn-primary">Join now!</button>
  </div>
</div>
